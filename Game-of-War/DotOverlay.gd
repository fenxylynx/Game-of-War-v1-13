extends Node2D



###################################################################################################################
      # Variables #
###################################################################################################################
  # 
var tred = Color(1, 0, 0, 0.75)
var tgreen = Color(0, 1, 0, 0.75)



###################################################################################################################
      # _ready #
###################################################################################################################
  # Called when the node enters the scene tree for the first time
  #   
func _ready():
  hide()
  


###################################################################################################################
      # setVisible #
###################################################################################################################
  # Set the visibility and color of the dot
func setVisible(dotVisibility, state):
  if dotVisibility:
    show()
    if state == 4 or state == 2 or state == 6:
      $TextureRect.modulate = tred
    elif state == 0 or state == 3 or state == 7:
      $TextureRect.modulate = tgreen
  else:
    hide()


